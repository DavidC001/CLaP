{
    "device": "cuda",
    "models_dir": "trained_models",
    "datasets_dir": "datasets",
    "contrastive":{
        "skip": false,
        "datasets": ["skiPose"],
        "mode": "multi",
        "drop_pairs": [0],
        "experiments": {
            "simclr_18_ski":{
                "model": "moco",
                "base_model": "resnet18",
                "batch_size": 32,
                "learning_rate_encoder": 0.1,
                "learning_rate_head": 0.5,
                "weight_decay": 1e-4,
                "momentum": 0.9,
                "temperature": 0.5,
                "epochs": 1,
                "save_every": 100
            }
        }
    },
    "pose_estimation":{
        "skip": false,
        "dataset": "skiPose",
        "batch_size": 64,
        "experiments":{
            "moco18Ski_estim_ski_10%":{
                "base_model":"resnet18",
                "model":"moco",
                "pretrained_name": "moco_18_ski",
                "architecture": [128],
                "learning_rate": 1e-3,
                "weight_decay": 1e-2,
                "epochs": 100,
                "save_every": 100,
                "LN": true,
                "activation": "gelu",
                "use_cluster": "./trained_models/simsiam_18_ski/skiPose_selected_images_20C_10%.txt"
            }
        }
    }
}