{
    "device": "cuda",
    "models_dir": "trained_models",
    "datasets_dir": "datasets",
    "contrastive":{
        "skip": false,
        "datasets": ["kinect"],
        "simclr":{
            "train": true,
            "name": "simclr_both",
            "batch_size": 512,
            "learning_rate": 0.8,
            "weight_decay": 0.000001,
            "momentum": 0.9,
            "temperature": 0.5,
            "epochs": 20,
            "save_every": 1
        },
        "simsiam":{
            "train": true,
            "name": "simsiam_both",
            "batch_size": 512,
            "learning_rate": 0.3,
            "weight_decay": 0.000001,
            "momentum": 0.9,
            "epochs": 20,
            "save_every": 1
        }
    },
    "pose_estimation":{
        "skip": true,
        "datasets": ["skiPose"],
        "simclr":{
            "train": true,
            "name": "simclr_estimator",
            "pretrained_name": "simclr",
            "architecture": [158,60],
            "batch_size": 512,
            "learning_rate": 0.8,
            "weight_decay": 0.000001,
            "momentum": 0.9,
            "epochs": 20
        },
        "simsiam":{
            "train": true,
            "name": "simsiam_estimator",
            "pretrained_name": "simsiam",
            "architecture": [158,60],
            "batch_size": 512,
            "learning_rate": 0.8,
            "weight_decay": 0.000001,
            "momentum": 0.9,
            "epochs": 20
        }
    }
}